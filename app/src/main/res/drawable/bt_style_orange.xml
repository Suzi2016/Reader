<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/gray_orange" android:endColor="@color/gray_orange"
                      android:angle="270" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/orange" android:endColor="@color/orange"
                      android:angle="180" />
            <corners android:radius="3dip" />
        </shape>
    </item>

</selector>