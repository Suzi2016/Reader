<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fontcolor_selector_brown"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/brown"/>

            <TextView
                android:id="@+id/tv_fontcolor_selector_black"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_fontcolor_selector_gray"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/tv_fontcolor_selector_red"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/red"/>

            <TextView
                android:id="@+id/tv_fontcolor_selector_colorAccent"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_fontcolor_selector_dark_gray"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/dark_gray"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>