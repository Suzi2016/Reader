<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="阅读设置"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"/>

    <LinearLayout
        android:id="@+id/ll_mine_font"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/block_style_white"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字体大小"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/tv_mine_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14号"
            android:textSize="14sp"
            android:textColor="@color/brown"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine_color"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/block_style_white"
        android:layout_gravity="center"
        android:layout_marginTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字体颜色"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/tv_mine_color"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/brown"
            android:background="@color/read_bg_01"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine_spacing"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/block_style_white"
        android:layout_gravity="center"
        android:layout_marginTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行间距"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/tv_mine_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.3"
            android:textSize="14sp"
            android:textColor="@color/brown"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine_bg"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/block_style_white"
        android:layout_gravity="center"
        android:layout_marginTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读背景"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/tv_mine_bg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/brown"
            android:background="@color/read_bg_01"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>


    <!--通用设置-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通用设置"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:id="@+id/ll_mine_help"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/block_style_white"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <TextView
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/brown"
            android:background="@drawable/tiaozhuan"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine_statement"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/block_style_white"
        android:layout_gravity="center"
        android:layout_marginTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="声明"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <TextView
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/brown"
            android:background="@drawable/tiaozhuan"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine_about"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/block_style_white"
        android:layout_gravity="center"
        android:layout_marginTop="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <TextView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/brown"
            android:background="@drawable/tiaozhuan"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_mine_quit"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="32dp"
        android:text="退出"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bt_style_white"/>

</LinearLayout>



















