<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suzi.reader.activitys.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/blue">


            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="书架"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"/>


        </LinearLayout>


        <com.suzi.reader.view.MyViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_main_bookshelf"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:id="@+id/im_main_bookshelf"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/main_bookshelf_clicked"/>

            <TextView
                android:id="@+id/tv_main_bookshelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/im_main_bookshelf"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="@color/transparent"
                android:text="书架"
                android:textColor="@color/blue"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_bookstore"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp" >

            <ImageView
                android:id="@+id/im_main_bookstore"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/main_bookstore"/>

            <TextView
                android:id="@+id/tv_main_bookstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/im_main_bookstore"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="@color/transparent"
                android:text="书库"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_bookorder"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/im_main_bookorder"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/main_bookorder"/>

            <TextView
                android:id="@+id/tv_main_bookorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/im_main_bookorder"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="@color/transparent"
                android:text="精选"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_mine"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp" >

            <ImageView
                android:id="@+id/im_main_mine"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/main_mine"/>

            <TextView
                android:id="@+id/tv_main_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/im_main_mine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="@color/transparent"
                android:text="我的"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
